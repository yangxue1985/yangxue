<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/add_list_view"
    android:layout_width="500dp"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingRight="5dp"
    tools:context="com.innkp.innovate.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black_3" />

        <TextView
            android:id="@+id/add_patent"
            style="@style/AddListStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/add_patent" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black_3" />

        <TextView
            android:id="@+id/add_patent2"
            style="@style/AddListStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/add_patent" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black_3" />

        <TextView
            android:id="@+id/add_patent3"
            style="@style/AddListStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/add_patent" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black_3" />

        <TextView
            android:id="@+id/add_patent4"
            style="@style/AddListStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/add_patent" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black_3" />
    </LinearLayout>
</LinearLayout>