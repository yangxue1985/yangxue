<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.innkp.innovate.UserIdeaAddActivity">

    <include
        android:id="@+id/toolbar_add"
        layout="@layout/toolbar_add" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="15dp">

            <EditText
                android:id="@+id/add_idea_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="@string/add_idea_title"
                android:padding="5dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black_9" />

            <EditText
                android:id="@+id/add_idea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:enabled="true"
                android:gravity="top"
                android:hint="@string/add_idea_text"
                android:inputType="textMultiLine"
                android:minLines="6"
                android:padding="5dp"
                android:scrollbars="vertical" />

            <com.innkp.innovate.UI.MyGridView
                android:id="@+id/add_idea_picture"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:numColumns="3"
                android:verticalSpacing="10dp" />
        </LinearLayout>

    </ScrollView>
</LinearLayout>
